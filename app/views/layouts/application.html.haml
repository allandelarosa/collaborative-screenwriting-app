!!!
%html
  %head
    = javascript_include_tag 'https://code.jquery.com/jquery-3.4.1.min.js'
    = javascript_include_tag 'https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.bundle.min.js'
    %link(rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/css/bootstrap.min.css" integrity="sha384-GJzZqFGwb1QTTN6wy59ffF1BuGJpLSa9DkKMp0DgiMDm4iYMj70gZWKYbI706tWS" crossorigin="anonymous")
    %title ScriptWriter++
    = stylesheet_link_tag 'application', 'media' => 'all', 'data-turbolinks-track' => true
    -#= javascript_include_tag "https://cdn.jsdelivr.net/npm/@editorjs/editorjs@latest"\
    
    -# = javascript_pack_tag 'editor_config'
    = csrf_meta_tags

    %body
      %div.app
        -# %div.navbar.navbar-expand-lg.bg-primary.text-white
          -# %h1.title Rotten Potatoes!
        #main
          - if flash[:notice]
            %div.alert.alert-danger
              #notice.message= flash[:notice]
          - elsif flash[:warning]
            %div.alert.alert-danger
              #warning.message= flash[:warning]

          = yield
